{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
    <div class="row">
        <div class="col s12 m6 offset-m3 l6 offset-l3">
            <div class="card blue-grey darken-1">
                <div class="card-content white-text">
                    <span class="card-title center-align">{{ 'login.title'|trans }}</span>
                    <hr/><br/>
                    {% if error %}
                        <div class="card-panel red lighten-3">
                            {{ error.messageKey|trans(error.messageData, 'security') }}
                        </div>
                    {% endif %}
                    <div class="row">
                        <form class="col s12" action="{{ path('login') }}" method="post" id="login_form">
                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="email" id="email" name="_email" value="{{ last_username }}" class="validate">
                                    <label for="email">{{'login.email'|trans}}</label>
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s12">
                                    <input type="password" id="password" name="_password" class="validate">
                                    <label for="password">{{'login.password'|trans}}</label>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="card-action right-align">
                    <a href="{{ path('forgot_password', {'email': last_username}) }}">{{ 'login.forgot_password'|trans }}</a>
                    <a href="#" id="submit-btn">{{ 'login.submit'|trans }}</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{%  block javascripts %}
    {{ parent() }}
    <script src="{{ asset('js/submit.js') }}"></script>
{% endblock %}